{
  "name": "ship-powerplant-simulator",
  "version": "7.1.0",
  "description": "Logic for ship simulator app",
  "main": "lib/Simulator.js",
  "types": "lib/Simulator.d.ts",
  "type": "module",
  "scripts": {
    "prepare": "tsc",
    "dev": "tsc -w",
    "build": "tsc -p .",
    "lint": "eslint . --fix",
    "test:coverage": "npm test -- --coverage",
    "test:badges": "npm run test:coverage  && istanbul-badges-readme",
    "test": "jest  --detectOpenHandles"
  },
  "author": "Naruby Riverlione",
  "repository": {
    "url": "https://github.com/NarubyRiverlione/ship-powerplant-simulator"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "istanbul-badges-readme": "^1.2.1",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "cross-env": "^7.0.2",
    "mobx": "^6.3.0"
  },
  "jest": {
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-typescript/base"
    ],
    "plugins": [
      "jest"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest/globals": true
    },
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "ignorePatterns": "/lib/",
    "rules": {
      "@typescript-eslint/lines-between-class-members": "off",
      "no-mixed-operators": "off",
      "class-methods-use-this": "warn",
      "max-len": [
        "warn",
        {
          "code": 120,
          "comments": 150
        }
      ],
      "indent": "off",
      "@typescript-eslint/indent": [
        "warn",
        2
      ],
      "linebreak-style": [
        0
      ],
      "quotes": [
        "error",
        "single"
      ],
      "@typescript-eslint/semi": [
        "error",
        "never"
      ],
      "no-mixed-spaces-and-tabs": [
        "warn",
        "smart-tabs"
      ],
      "no-console": [
        "off"
      ]
    }
  }
}
