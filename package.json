{
  "name": "ship-powerplant-simulator",
  "version": "6.1.7",
  "description": "Logic for ship simulator app",
  "main": "lib/Simulator.js",
  "types": "lib/Simulator.d.ts",
  "type": "module",
  "scripts": {
    "prepare": "tsc",
    "dev": "tsc -w",
    "build": "tsc -p .",
    "lint": "eslint . --fix",
    "test:coverage": "npm test -- --coverage",
    "test:badges": "npm run test:coverage  && istanbul-badges-readme",
    "test": "jest  --detectOpenHandles"
  },
  "author": "Naruby Riverlione",
  "repository": {
    "url": "https://github.com/NarubyRiverlione/ship-powerplant-simulator"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "eslint": "^7.24.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.5",
    "istanbul-badges-readme": "^1.2.1",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "cross-env": "^7.0.2",
    "mobx": "^6.2.0"
  },
  "jest": {
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base/legacy"
    ],
    "plugins": [
      "jest"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest/globals": true
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "ignorePatterns": "/lib/",
    "rules": {
      "no-mixed-operators": "off",
      "class-methods-use-this": "warn",
      "max-len": [
        "warn",
        {
          "code": 120,
          "comments": 150
        }
      ],
      "indent": [
        "warn",
        2
      ],
      "linebreak-style": [
        0
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "no-mixed-spaces-and-tabs": [
        "warn",
        "smart-tabs"
      ],
      "no-console": [
        "off"
      ]
    }
  }
}