{
  "name": "ship-powerplant-simulator",
  "version": "3.0.0",
  "description": "Simulator logic for ship powerplant",
  "main": "src/Simulator.js",
  "type": "module",
  "scripts": {
    "lint": "eslint . --fix",
    "test:coverage": "npm test -- --coverage",
    "test:badges": "npm run test:coverage  && istanbul-badges-readme",
    "test": "jest"
  },
  "author": "Naruby Riverlione",
  "repository": {
    "url": "https://github.com/NarubyRiverlione/ship-powerplant-simulator"
  },
  "license": "ISC",
  "devDependencies": {
    "eslint": "^7.16.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "istanbul-badges-readme": "^1.2.0",
    "jest": "^26.6.3"
  },
  "dependencies": {
    "cross-env": "^7.0.2",
    "mobx": "^6.0.4"
  },
  "jest": {
    "coverageReporters": [
      "json-summary",
      "text"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base/legacy"
    ],
    "plugins": [
      "jest"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest/globals": true
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "rules": {
      "no-mixed-operators": "off",
      "class-methods-use-this": "warn",
      "max-len": [
        "warn",
        {
          "code": 120,
          "comments": 150
        }
      ],
      "indent": [
        "warn",
        2
      ],
      "linebreak-style": [
        0
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "no-mixed-spaces-and-tabs": [
        "warn",
        "smart-tabs"
      ],
      "no-console": [
        "off"
      ]
    }
  }
}